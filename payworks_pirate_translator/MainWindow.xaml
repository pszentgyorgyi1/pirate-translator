<Window x:Class="payworks_pirate_translator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:payworks_pirate_translator"
        mc:Ignorable="d"
        Title="MainWindow" Height ="300" Width="600"  MinHeight="250" MinWidth="450
        ">
    <Grid FocusManager.IsFocusScope="True">
        
        <TextBox x:Name="welcomeBox" IsReadOnly="True" BorderThickness="0" HorizontalAlignment="Center" TextWrapping="Wrap" Text="English to pirate translator" VerticalAlignment="Top" Margin="0,10,0,0"/>
        <TextBox x:Name="inputBox" HorizontalAlignment="Stretch" VerticalAlignment ="Center" BorderThickness="1" Height="23" MaxWidth="400" Text="Click here and enter the english text to translate" TextAlignment="Center" GotFocus="InputBox_OnGotFocus"/>
        <TextBox x:Name="outputBox" IsReadOnly="True" HorizontalAlignment="Stretch" VerticalAlignment ="Bottom" BorderThickness="0" MaxWidth ="400" TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,25"/>
        
        <Button x:Name="translateButton" Content="Translate!" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" MinWidth ="75" Margin="0,100,0,0" Click="TranslateButton_OnClick"/>
    </Grid>
</Window>
